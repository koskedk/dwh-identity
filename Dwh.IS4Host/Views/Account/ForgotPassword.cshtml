@model Dwh.IS4Host.ViewModels.ForgotPasswordModel

@{
    ViewData["Title"] = "ForgotPassword";
}

<div class="col-md-8">
    <div class="card-group">
        <div class="card p-4">
            <div class="card-body">
                <h1>Forgot Password</h1>

                <form asp-action="ForgotPassword">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="input-group mb-3">
                        <input class="form-control" type="text" placeholder="Username" asp-for="Email">
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="row">
                        <div class="col-6">
                            <button class="btn btn-primary px-4" type="submit" name="button" value="Submit">Submit</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
