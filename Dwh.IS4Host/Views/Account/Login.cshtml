@model LoginViewModel

<div class="col-md-8">
    <div class="card-group">
        <div class="card p-4">
            <div class="card-body">
                <h1>Login</h1>
                <p class="text-muted">Sign In to your account</p>

                <partial name="_ValidationSummary" />
                
                @if (Model.EnableLocalLogin)
                {
                    <form asp-route="Login">
                        <input type="hidden" asp-for="ReturnUrl" />
                        <div class="input-group mb-3">
                            <input class="form-control" type="text" placeholder="Username" asp-for="Username">
                        </div>
                        <div class="input-group mb-4">
                            <input class="form-control" type="password" placeholder="Password" asp-for="Password">
                        </div>
                        <div class="row">
                            <div class="col-6">
                                <button class="btn btn-primary px-4" name="button"  value="login">Login</button>
                            </div>
                            <div class="col-6 text-right">
                                <a asp-action="ForgotPassword" class="btn btn-link px-0">
                                    <span>Forgot password?</span>
                                </a>
                            </div>
                        </div>
                    </form>
                }
            </div>
        </div>
        <div class="card text-white bg-primary py-5 d-md-down-none" style="width:44%">
            <div class="card-body text-center">
                <div>
                    <h2>Sign up</h2>
                    <p>Please login using your credentials. If you do not have credentials you can request for access or proceed as Guest to access the public dashboards.</p>
                    <button class="btn btn-lg btn-outline-light mt-3" type="button">Register Now!</button>
                </div>
            </div>
        </div>
    </div>
</div>